<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        
        <Button
            android:background="@drawable/blue_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playSound00">
        </Button>

        <Button
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/blue_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playSound01">
        </Button>

        <Button
            android:background="@drawable/blue_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playSound02">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_marginBottom="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/pink_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playSound10">
        </Button>

        <Button
            android:background="@drawable/orange_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playSound11">
        </Button>

        <Button
            android:background="@drawable/pink_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playSound12">
        </Button>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/green_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playSound20">
        </Button>

        <Button
            android:background="@drawable/purple_button"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playSound21">
        </Button>

        <Button
            android:background="@drawable/green_button"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playSound22">
        </Button>

    </LinearLayout>



</LinearLayout>